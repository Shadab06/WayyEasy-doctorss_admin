<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.LoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter login details"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/login_heading"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/solid_white_background"
        android:hint="Enter email/mobile no."
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/theme_color"
        android:id="@+id/email_mobile" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/solid_white_background"
        android:hint="Enter password"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/theme_color"
        android:inputType="textPassword"
        android:id="@+id/password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/solid_white_circular_background"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:textColor="@color/theme_color"
        android:elevation="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/red"
        android:text="Error Message"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New user?"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hollow_white_circular_background"
            android:text="Register here"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
</LinearLayout>